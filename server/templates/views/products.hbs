<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/adminPanel.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Product List</title>
  </head>
  <body>
        <div class="d-flex align-items-center justify-content-center">
        {{>header}}
    </div>
      <div>
    <a href="/user_list">Users page</a>
  </div>
    <div>
      <h2>Products</h2>
    </div>
    <div>
    <a href="/user/me">My Page</a>
  </div>
    <div>
      <a href="/create_product"><button>Add Product</button></a>
    </div>
    <div>
        <table id="productList">
          <tr>
            {{!-- <th>Check user</th> --}}
            <th>Product id</th>
            <th>Product name</th>
            <th>Product description</th>
            <th>Product Image</th>
            <th>Product price</th>
            <th>Edit product</th>
            <th>Delete product</th>
          </tr>
            {{#each products}}
          <tr>
            {{!-- <th><input type="checkbox" name="checkbox" value="{{this._id}}" form="form1"></th> --}}
            <th id="pId">{{this._id}}</th>
            <th>{{this.name}}</th>
            <th>{{this.description}}</th>
            <th>{{this.image}}</th>
            <th>{{this.price}}</th>
            <th>
            {{!-- <form action="/update_user" method="post" id="uId">
            <input type="hidden" name="uId" value="{{this._id}}">
            <button type="submit">Edit</button>
            </form> --}}
              <a href="/update_product/{{this._id}}"><button>Edit</button></a>
            </th>
            <th class="d-flex align-items-center justify-content-center">
              <form action="/delete_product" method="post" id="pId">
              <input type="hidden" name="pId" value="{{this._id}}">
              <button type="submit">Delete</button>
              </form>
            </th>
          </tr>
          {{/each}}
        </table>
    </div>
  </body>
</html>